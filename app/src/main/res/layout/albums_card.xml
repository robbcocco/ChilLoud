<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <android.support.v7.widget.CardView
        android:id="@+id/collapsed_album_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:id="@+id/collapsed_album_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <ImageView
                android:id="@+id/collapsed_album_cover"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@android:color/white"
                tools:text="Album" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/collapsed_album_card_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/expanded_album_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp">
        <LinearLayout
            android:id="@+id/expanded_album_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/expanded_album_card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="2dp">
                    <ImageView
                        android:id="@+id/expanded_album_cover"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </android.support.v7.widget.CardView>
                <!--<ImageView-->
                    <!--android:id="@+id/expanded_album_cover"-->
                    <!--android:layout_width="90dp"-->
                    <!--android:layout_height="90dp"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:scaleType="fitXY"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp">
                    <TextView
                        android:id="@+id/album_name_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="27dp"
                        tools:text="Album" />
                    <TextView
                        android:id="@+id/album_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Artist"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryLight"/>
                </LinearLayout>
                <ImageButton
                    android:id="@+id/album_options"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_more_vert"
                    android:tint="@color/colorPrimaryLight"
                    style="@style/Widget.AppCompat.Button.Borderless"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/expanded_album_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorLightBackground">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/album_songs_list"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
